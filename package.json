{
    "name": "studysync-devops-platform",
    "version": "1.0.0",
    "description": "Enterprise-grade DevOps implementation of a collaborative study platform showcasing modern CI/CD pipelines, containerization, and cloud deployment strategies",
    "keywords": [
        "devops",
        "docker",
        "ci-cd",
        "github-actions",
        "react",
        "nodejs",
        "mongodb",
        "microservices",
        "containerization",
        "cloud-deployment"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DevDhruvX/DevOps-Project.git"
    },
    "homepage": "https://studysync-frontend-v7wk.onrender.com",
    "bugs": {
        "url": "https://github.com/DevDhruvX/DevOps-Project/issues"
    },
    "license": "MIT",
    "author": {
        "name": "StudySync DevOps Team",
        "email": "support@studysync-devops.com",
        "url": "https://github.com/DevDhruvX"
    },
    "scripts": {
        "start": "docker compose up -d",
        "stop": "docker compose down",
        "restart": "docker compose restart",
        "logs": "docker compose logs -f",
        "build": "docker compose build",
        "dev": "docker compose -f docker-compose.dev.yml up -d",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm test",
        "test:backend": "cd backend && npm test",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:backend": "cd backend && npm run lint",
        "install:all": "npm run install:frontend && npm run install:backend",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && npm install",
        "setup": "npm run install:all && npm run build",
        "clean": "docker compose down -v --rmi all --remove-orphans",
        "health": "curl -f http://localhost:5000/api/health || exit 1",
        "demo": "node scripts/demo.js"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0",
        "docker": ">=20.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "workspaces": [
        "frontend",
        "backend"
    ]
}